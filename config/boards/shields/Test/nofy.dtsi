#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    kscan0: kscan {
		compatible = "zmk,kscan-gpio-charlieplex";
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <12>;
		rows = <6>;

		map = <
		RC(4,0)   RC(0,3)   RC(0,4)   RC(0,5)   RC(1,3)   RC(1,5)       RC(0,10)  RC(0,11)  RC(0,8)   RC(0,9)   RC(1,10)  RC(1,11)  RC(4,6)
		RC(4,1)   RC(1,0)   RC(0,1)   RC(0,2)   RC(2,3)   RC(2,5)       RC(1,6)   RC(0,7)   RC(1,8)   RC(1,9)   RC(2,10)  RC(2,11)  RC(4,7)
		RC(4,2)   RC(2,0)   RC(2,1)   RC(1,2)   RC(4,3)   RC(3,5)       RC(2,6)   RC(2,7)   RC(3,8)   RC(2,9)   RC(3,10)  RC(3,11)  RC(4,8)
		          RC(3,0)   RC(3,1)   RC(3,2)   RC(5,3)   RC(4,5)       RC(3,6)   RC(3,7)                                 RC(4,11)
		>;
	};

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <24>;
    };
};
